<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:background="#FAFAFA" />


    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#151515"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_home"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="@string/tab_home"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_vehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_vehicle"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="@string/tab_vehicle"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_merchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_merchant"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:text="@string/tab_merchant"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_me"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="@string/tab_me"
            android:textColor="@color/selector_tab_text_color"
            android:textSize="10sp" />
    </RadioGroup>
</FrameLayout>